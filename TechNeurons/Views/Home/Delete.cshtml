@model TechNeurons.Models.Employee

@{
    ViewBag.Title = "Delete";
}


<div class="container">
    <div class="row mb-5">
        <div class="col-md-12">
            <h3>Delete Employee Details</h3>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Delete", "Home", FormMethod.Post))
             {
                @Html.AntiForgeryToken()
                <input type="number" name="@Model.Id" hidden />

                <div class="row">
                    <div class="col-md-6">


                        <div class="form-group mb-3">
                            <label class="fw-bold">NAME</label><br />
                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="form-group mb-3">
                            <label class="fw-bold">AGE</label>
                            @Html.EditorFor(model => model.age, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="form-group mb-3">
                            <label class="fw-bold">EXPERIENCE</label>
                            @Html.EditorFor(model => model.experience, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                        </div>
                        <div class="form-group mb-3">
                            <label class="fw-bold">DEPARTMENT</label>
                            @Html.EditorFor(model => model.department, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                        </div>


                    </div>
                    <div class="col-md-6">

                        <div class="form-group mb-3">
                            <label class="fw-bold">GENDER </label><br />
                            @Html.EditorFor(model => model.gender, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })



                        </div>

                        <div>
                            <div class="form-group">
                                <label class="fw-bold">ADDRESS </label>
                                @Html.TextAreaFor(model => model.address, new { @class = "form-control", @rows = 2, @cols = 4, @disabled = "disabled" })
                            </div>


                        </div>


                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mt-3">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        <a href="@Url.Action("Index","Home")" class="btn btn-info">Back to view</a>
                    </div>
                </div>
             }

        </div>
    </div>


</div>

