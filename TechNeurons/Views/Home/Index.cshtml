@model List<TechNeurons.Models.Employee>

@{
    ViewBag.Title = "Home Page";
}



<div class="container">
    <div class="row mb-4">
        <div class="col-md-6 text-uppercase">
            <h2>Employee List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Create", "Home")" class="btn btn-success">Create Employee</a>
        </div>
    </div>
    <hr />

    @if (Model.Count() > 0)
    {
        <table id="table" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">Employee Id</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">Age</th>
                    <th class="text-center">Experience</th>
                    <th class="text-center">Department</th>
                    <th class="text-center">Gender</th>
                    <th class="text-center">Address</th>
                    <th class="text-center">Action</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center" width="5%">@item.Id</td>
                        <td class="text-center">@item.name</td>
                        <td class="text-center">@item.age</td>
                        <td class="text-center">@item.experience</td>
                        <td class="text-center">@item.department</td>
                        <td class="text-center">@item.gender</td>
                        <td class="text-center" width="20%">@item.address</td>

                        <td class="text-center">
                            <div class=" btn-group text-center" role="group">
                                <a href="@Url.Action("Details","Home",new {@id=item.Id})" class="btn btn-info">Details</a>
                                <a href=" @Url.Action("Edit","Home",new {@id=item.Id})" class="btn btn-secondary">Edit</a>
                                <a href="@Url.Action("Delete","Home",new {@id=item.Id})" class="btn btn-danger">Delete</a>

                            </div>
                        </td>
                    </tr>
                 }
            </tbody>


        </table>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center text-uppercase text-danger">No Record</h2>
                </div>
            </div>

        </div>
    }


</div>


@section DataTable{
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {

            $('#table').DataTable();
        });
       
    </script>
}
